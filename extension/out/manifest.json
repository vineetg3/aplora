{
  "manifest_version": 3,
  "name": "Aplora",
  "version": "1.0",
  "permissions": ["activeTab", "scripting", "debugger"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Extract Page Content"
  },
  "web_accessible_resources": [
    {
      "resources": ["content.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "author":"Vineet Gandham",
  "author_email":"vineet.formasters@gmail.com"
}
